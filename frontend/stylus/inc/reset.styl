*
  margin 0
  padding 0
  font-size 100%
  line-height 100%
  box-sizing border-box
button
  cursor pointer
ul
  list-style none
a
  text-decoration none
body
  font-family 'Avenir Next Cyr', sans-serif

::selection
  background: #31cfce
  color #fff
img
  width 100%
  height 100%
  object-fit cover
