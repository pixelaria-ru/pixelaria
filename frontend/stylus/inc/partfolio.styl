.section--partfolio
  height: max-content
  &__article
    transition .7s
    margin-top 0px
    h2
      font-size: 24px;
      font-weight: 500;
      line-height: 1.33;
      color: #ffffff;
    span
      font-size: 14px;
      line-height: 2;
      color: #949494;
      &:last-child
        text-align: right;
        display: block;
.partfolio-article

  &__left-side
    width 70%
    position: relative;
    z-index: 0
    p
      position: sticky;
      right 0
      left 0
      bottom: 30px
      margin-bottom: 30px
      text-transform: uppercase;
      font-size: 12px;
      text-align: right;
      color: #ffffff;
      text-align: center;
  &__right-side
    width 30%
    box-shadow: 0 10px 16px 0 rgba(11, 11, 11, 0.5), 0 0 4px 0 rgba(0, 0, 0, 0.1);
    background-color: #242424;
    padding: 50px 40px
    position: sticky;
    top 88px
    margin-top: 0
    height 100vh

.partfolio-list
  &__item
    margin 20px 0
    h3
      font-size: 14px;
      line-height: 2;
      color: #ffffff;
      font-weight: 600;
    p
      font-size: 14px;
      line-height: 2;
      color: #ffffff;
