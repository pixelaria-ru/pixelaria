.mobile-menu
  display none
@media(min-width 320px) and (max-width 720px)
  .header
    transition .55s
    &.open
      background-color: #242424;
  .header__mobile-side
    align-items center

    .icon
      fill #fff
      width 20px
      height 20px
      margin-right 18px
      display block
  .mobile-menu
    display flex
    cursor pointer
    justify-content center
    width 40px
    height 40px
    border-radius 50%
    background-color #ffffff
    align-items center
    flex-direction column
    span
      width 18px
      height 2px
      display block
      background-color #1a1a1a
      margin 3px 0
    &:before,&:after
      content ''
      width 18px
      height 2px
      display block
      background-color #1a1a1a
  .header .container
    padding: 35px 30px;
  .section--initial-screen .grid
    grid-template-columns 1fr
  .initial-screen__item
    &:first-child,&:not(:first-child)
      height 480px
      grid-column 1
      display flex
      flex-direction column
      align-items: center
      justify-content center
      padding: 30px
      h3
        padding 20px 60px
        border-radius 30px
        border 1px solid #ffffff
        display flex
        justify-content center
        align-items center
        font-size 14px
        font-weight 400
        text-transform none
        order 3
      p
        font-size: 20px;
        font-weight: 300;
        line-height: 28px;
        text-align: center;
        margin-bottom 26px
      hr
        display none
  .section--price
    height max-content
    .container
      padding: 0 0 125px;
  .section--price__products
    flex-direction: column;
  .section--price__product-item
    margin-bottom 50px
    border-right 0px
  .section--price__aditional-text
    max-width 260px
    color #ffffff
    font-size 14px
    font-weight 400
    line-height 24px
    margin-top: 0;


  .section--partfolio__article
    flex-direction: column;
  .partfolio-article__left-side
    width: 100%;
    height: 135px;
    img
      position absolute
    h2
      padding-left 30px
      margin-top 45px
      position relative
    span
      &:last-child
        padding-left 30px
        color #fff
        text-align left
        position relative

  .partfolio-article__right-side
    top 0
    width: 100%;
    height max-content
    position: relative;
    .button--green
      margin: 25px auto 0;
      display: block;
  .section--about
    display block
    .section--about__article
      width 100%
      height max-content
      padding-bottom 70px
      &:hover
        min-width: 100%;
      img
        &:first-child
          margin-top 70px
        &:nth-child(5)
          display none
      p
        width: auto;
        height: auto;
        opacity: 1;
        &:nth-child(4)
          display none
  .header__nav
    opacity 0
    transform: translateY(1210px)
    position: fixed;
    transition .55s
    width: 100%;
    top 110px
    left 0
    background-color: #242424;
    .nav__list
      flex-direction: column;
    .list-item

      margin: 11px 0;
      a
        padding-left 30px
        color: #fff;
        font-size: 20px;
        font-weight: 300;
    .zak
      a
        display flex
        justify-content center
        align-items center
        margin 40px auto 50px
        padding-left 0

    &.active
      transform: translateY(0px)
      opacity 1
