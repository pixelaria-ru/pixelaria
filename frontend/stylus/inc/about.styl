.section--about
  height: 650px
  &__article
    width calc(1280px / 4)
    text-align: center;
    position: relative;
    min-width: 210px
    padding: 0 65px
    transition: .55s
    cursor: pointer
    background-color: #191919;
    &:hover
      min-width: 650px
      p
        opacity: 1
        height max-content
        width: 520px

    &:nth-child(odd)
      background-color: #161616
    h2
      font-size: 16px;
      font-weight: 500;
      text-align: center;
      color: #ffffff;
      text-transform: uppercase;
      margin-top: 40px
    p
      font-size: 14px;
      margin-top: 30px
      line-height: 2;
      width: 0px
      color: #ffffff;
      opacity: 0
      height: 0px
      overflow: hidden;
      transition: .55s
      text-align: left;
    img
      &:first-child
        width: 80px;
        height: 80px;
        margin-top: 130px
      &:last-child
        width: 25px;
        height: 25px;
        position: absolute;
        left 0
        right 0
        bottom: 40px
        margin: auto;
